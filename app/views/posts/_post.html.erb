<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= post.category %>
  </p>

  <p>
    <strong>Author:</strong>
    <%= post.author %>
  </p>

  <p>
    <strong>Image url:</strong>
    <%= post.image_url %>
  </p>

  <p>
  <strong>Content:</strong>
  <%= post.content %>
</p>

</div>
